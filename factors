#!/usr/bin/python3
# library to get arguments
import sys


# fn unpack number factorial
def func():
    """
    function func to get file to convert numbers and format n=p*q
    """
    try:
        revfle = sys.argv[1]
        with open(revfle) as fl:
            for revnumbers in fl:
                revnumbers = int(revnumbers)
                if revnumbers % 2 == 0:
                        print("{}={}*{}".format(revnumbers, revnumbers // 2, 2))
                        continue
                itr = 3
                while itr < revnumbers // 2:
                    if revnumbers % itr == 0:
                        print("{}={}*{}".format(revnumbers, revnumbers // itr, itr))
                        break
                    itr = itr + 2
                if itr == (revnumbers // 2) + 1:
                    print("{}={}*{}".format(revnumbers, revnumbers, 1))
    except (IndexError):
        pass


# autostart
func()
