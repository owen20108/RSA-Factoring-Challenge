#!/usr/bin/python3
"""Factorizes natural numbers from a file into a product of two smaller numbers."""
import sys

def factorize_numbers(file_path):
    try:
        with open(file_path, "r") as file:
            lines = file.readlines()
            numbers = [int(line.strip()) for line in lines]

            for num in numbers:
                divisor = 2
                while divisor < num:
                    if num % divisor == 0:
                        factor = num // divisor
                        print("{}={}*{}".format(num, factor, divisor))
                        break
                    else:
                        divisor += 1

    except FileNotFoundError:
        print("Error: File not found")
    except ValueError:
        print("Error: Invalid input in the file")
    except Exception as e:
        print(f"An error occurred: {str(e)}")

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        sys.exit(1)

    file_path = sys.argv[1]
    factorize_numbers(file_path)

