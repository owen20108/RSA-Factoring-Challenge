#!/usr/bin/python3
"""Factorize a given set of numbers in a file into a product of two smaller numbers."""
from sys import argv


def factorize(number_to_factorize):
    """Find two smaller numbers that multiply to give a given number."""
    divisor = 2

    if number_to_factorize < 2:
        return

    while number_to_factorize % divisor:
        divisor += 1
    print(
        "{:.0f}={:.0f}*{:.0f}".format(
            number_to_factorize, number_to_factorize / divisor, divisor
        )
    )


if len(argv) != 2:
    exit()

try:
    with open(argv[1]) as file:
        line = file.readline()

        while line != "":
            number_to_factorize = int(line.split("\n")[0])
            factorize(number_to_factorize)
            line = file.readline()
except:
    pass

